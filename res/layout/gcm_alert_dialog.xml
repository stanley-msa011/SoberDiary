<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/test_question_bg" >

    <TextView
        android:id="@+id/gcm_alert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name" 
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/normal_title_size"
        />
    
    <ScrollView
        android:id="@+id/gcm_scroll_view"
        android:layout_marginTop="20dp"
        android:layout_width="220dp"
        android:layout_height="280dp"
        android:layout_below="@+id/gcm_alert_title" 
        android:layout_centerHorizontal="true"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
            android:id="@+id/gcm_text"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:lineSpacingMultiplier="1.2"
            android:textSize="@dimen/large_text_size"
            />
        </FrameLayout>

    </ScrollView>

    	<TextView
        	android:id="@+id/gcm_alert_ok"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/ok" 
        	android:padding="10dp"
        	android:textColor="@color/dark_gray"
	        android:layout_marginTop="24dp"
        	android:layout_below="@+id/gcm_scroll_view"
        	android:layout_centerHorizontal="true"
        	android:textSize="@dimen/normal_title_size"
        />
    
</RelativeLayout>
