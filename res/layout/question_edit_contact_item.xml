<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/questionnaire_button" >

    <LinearLayout
        android:id="@+id/question_name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/question_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.7dp"
            android:text="@string/setting_name"
            android:textColor="#FF5c5c5c"
            android:textSize="@dimen/large_text_size"/>

        <EditText
            android:id="@+id/question_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.7dp"
            android:background="@drawable/questionnaire_edit_text"
            android:ems="5"
            android:hint="@string/emotion_manage_input"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLength="5"
            android:paddingLeft="10dp"
            android:textColor="#FF000000"
            android:textSize="@dimen/large_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/question_phone_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_name_layout"
        android:layout_marginBottom="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/question_phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.7dp"
            android:text="@string/setting_phone"
            android:textColor="#FF5c5c5c"
            android:textSize="@dimen/large_text_size"/>

        <EditText
            android:id="@+id/question_phone"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question_name_layout"
            android:layout_marginLeft="6.7dp"
            android:background="@drawable/questionnaire_edit_text"
            android:ems="15"
            android:hint="@string/emotion_manage_input"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:maxLength="15"
            android:paddingLeft="10dp"
            android:textColor="#FF000000"
            android:textSize="@dimen/large_text_size"/>
    </LinearLayout>

</RelativeLayout>