<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/questionnaire_animation_bg" >

    <LinearLayout
        android:id="@+id/question_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/question_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/question_end"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2" >

            <ImageView
                android:id="@+id/question_animation_left_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/questionnaire_animation_left_button"
                android:scaleType="center"
                android:src="@drawable/stop" />

            <ImageView
                android:id="@+id/question_animation_right_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/questionnaire_animation_right_button"
                android:scaleType="center"
                android:src="@drawable/play" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/question_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/questionnaire_button"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/question_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_weight="3"
                android:maxLines="2"
                android:text="@string/end"
                android:textColor="#FF5c5c5c"
                android:textSize="@dimen/large_text_size" />

            <ImageView
                android:id="@+id/question_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="24dp"
                android:layout_weight="1"
                android:scaleX="2"
                android:scaleY="2"
                android:src="@drawable/questionnaire_item_ok" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/question_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/question_bottom"
        >

        <ImageView
            android:id="@+id/question_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

</RelativeLayout>