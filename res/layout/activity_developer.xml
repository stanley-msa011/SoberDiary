<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeveloperActivity" >

    <EditText
        android:id="@+id/developer_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="20"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/developer_edit"
        android:layout_centerHorizontal="true"
        android:text="Please enter the password for developers"
        />

    <Button
        android:id="@+id/developer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/developer_edit"
        android:layout_centerHorizontal="true"
        android:text="Enter" />

</RelativeLayout>